{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@entities/*": ["src/db/entities/*"],
      "@utils/*": ["src/utils/*"],
      "@db/*": ["src/db/*"],
      "@modules/*": ["src/modules/*"]
    },
    "incremental": true
  }
}
